.container {
  justify-content: flex-start;
  padding: 30rpx 60rpx;
}

.item-control {
  box-sizing: border-box;
  width: 100%;
  height: 100rpx;
  line-height: 100rpx;
  margin-bottom: 20rpx;
  display: flex;
  background-color: #eee;
  border-radius: 3px;
  padding: 0 20rpx;
}

.item-control input {
  text-align: left;
  width: 100%;
  height: 100%;
}

.action {
  width: 100%;
}

.result {
  padding: 0;
  background: none;
}